<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PHMyApplicationActivity" >

    <Button
        android:id="@+id/offButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_off" />

    <Button
        android:id="@+id/onButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_on"/>


    <Button
        android:id="@+id/applauseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Applause"/>

    <Button
        android:id="@+id/cricketButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crickets"/>

    <Button
        android:id="@+id/noooButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NOOOOOOOOOOOOOOOOO"/>

    <Button
        android:id="@+id/laughButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Laugh"/>

    <Button
        android:id="@+id/reactorButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reactor"/>


    <Button
        android:id="@+id/waveButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="wave"/>
    <Button
        android:id="@+id/fireButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="fire"/>

    <Button
    android:id="@+id/fireworkButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="firework"/>

    <Button
        android:id="@+id/spaceButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SpaceOpening"/>
    <Button
        android:id="@+id/c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Christian"/>
    <Button
        android:id="@+id/d"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dominique"/>
    <Button
        android:id="@+id/j"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Jonathan"/>
    <Button
        android:id="@+id/sh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sherry"/>
    <Button
        android:id="@+id/si"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Simon"/>

</LinearLayout>